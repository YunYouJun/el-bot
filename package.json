{
  "name": "el-bot",
  "version": "0.3.21",
  "description": "A quick qq bot framework for mirai.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "el": "dist/cli/index.js"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "build:mirai-ts": "cd packages/mirai-ts && yarn build",
    "clean": "rm -rf dist",
    "bot": "ts-node-dev bot/index.ts",
    "dev": "npm-run-all --parallel dev:*",
    "dev:bot": "cross-env NODE_ENV=dev ts-node-dev bot/index.ts",
    "dev:plugins": "cd packages/el-bot-plugins && yarn watch",
    "install:mirai": "node scripts/install-mirai-ok.js",
    "lint": "eslint src --ext .ts --fix && prettier --write .",
    "start": "npm-run-all --parallel start:*",
    "start:bot": "yarn build && node dist/index.js",
    "test": "yarn lint",
    "watch": "tsc --watch",
    "pull": "npm-run-all --parallel pull:*",
    "pull:el-bot": "git pull",
    "watch:mirai-ts": "cd packages/mirai-ts && tsc --watch",
    "prepublish": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/el-bot"
  },
  "keywords": [
    "el-bot",
    "elpsy",
    "bot",
    "mirai",
    "qq",
    "framework"
  ],
  "author": {
    "name": "云游君",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/YunYouJun/el-bot/issues"
  },
  "homepage": "https://docs.bot.elpsy.cn/",
  "dependencies": {
    "cac": "^6.6.1",
    "chalk": "^4.0.0",
    "dayjs": "^1.8.35",
    "download": "^8.0.0",
    "feedparser": "^2.2.10",
    "github-webhook-handler": "^1.0.0",
    "glob": "^7.1.6",
    "html-to-text": "^5.1.1",
    "inquirer": "^7.3.3",
    "js-yaml": "^3.14.0",
    "mirai-ts": "^0.6.0",
    "mongodb": "^3.6.1",
    "node-schedule": "^1.3.2",
    "progress": "^2.0.3",
    "rss-parser": "^3.8.0",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/download": "^6.2.4",
    "@types/html-to-text": "^5.1.1",
    "@types/inquirer": "^7.3.1",
    "@types/js-yaml": "^3.12.4",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.6.3",
    "@types/node-schedule": "^1.3.0",
    "@types/progress": "^2.0.3",
    "@types/shelljs": "^0.8.8",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "ts-node-dev": "^1.0.0-pre.62",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "directories": {
    "lib": "https://github.com/YunYouJun/mirai-ts"
  }
}
